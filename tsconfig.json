{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "inlineSources": true,
        "outDir": "compiled-js",
        "rootDir": "./",
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ]
}
